<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="3dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile_conversation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:textStyle="bold"
        android:id="@+id/name_profile_conversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_profile_conversation"></TextView>

    <TextView
        android:id="@+id/message_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_profile_conversation"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_profile_conversation"></TextView>

    <TextView
        android:id="@+id/date_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"></TextView>


</RelativeLayout>